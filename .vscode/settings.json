{
    "terminal.integrated.profiles.windows": {
        "venvcmd": {
          "path": "cmd.exe",
          "args": [
             "/k",
             ".\\venv\\Scripts\\activate"
          ]
        }
    },
    "terminal.integrated.defaultProfile.windows": "venvcmd",
    "terminal.integrated.profiles.linux": {
        "venvbash": {
          "path": "/bin/bash",
          "args": [
            "-s",
            "./venv/bin/activate"
          ]
        }
    },
    "terminal.integrated.defaultProfile.linux": "venvbash",
}